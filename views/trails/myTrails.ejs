<%- include('../partials/header') %>
<h1>My Trails</h1>
<table id="myTrails-list">
    <% if (user && user?._id.equals(req.user)) { %>
    <thead>
        <tr>
            <th>Name</th>
            <th>Length(mile)</th>
            <th>Elevation Gain(ft)</th>
            <th>Difficulty</th>
            <th>Location</th>
        </tr>
    </thead>
    <tbody>
    <% trails.forEach(function(t) { %>
        <tr>
            <td><%= t.name %></td>
            <td><%= t.length %></td>
            <td><%= t.elevationGain %></td>
            <td><%= t.difficulty %></td>
            <td><%= t.location %></td>
            <td><a href="/trails/<%= t._id %>"> More details</a></td>
         <% }) %>
        </tr>
    <% }; %>
    </tbody>
</table>
<%- include('../partials/footer') %>